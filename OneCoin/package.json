    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "express-mongo-sanitize": "^2.1.0",
    "helmet": "^4.6.0",
    "html-to-text": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
