    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix src/",
      "pretty-quick â€” staged"
    ]
  },
  "_moduleAliases": {
    "@bin": "src/api/bin",
    "@models": "build/models",
    "@config": "build/core/config",
    "@core": "build/core",
    "@mail": "build/mails",
    "@middlewares": "build/middlewares",
    "@helpers": "build/helpers",
    "@jobs": "build/jobs",
    "@datasources": "build/data-sources",
    "@schemas": "build/schemas",
    "@abis": "abis"
  }
