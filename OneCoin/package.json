{
  "name": "one-coin-backend",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "scripts": {
    "pm2:start": "npm run remove && pm2 start npm --name=\"One Coin BE\" -- start",
    "pm2:restart": "pm2 restart \"One Coin BE\"",
    "pm2:delete": "pm2 delete \"One Coin BE\"",
    "start": "npm run build && node src/api/bin/www --exec babel-node --presets @babel/preset-env",
    "build": "npm run remove && babel ./src --out-dir lib --copy-files",
    "build-prod": "npm run build && babel ./lib -d dist --copy-files",
    "prod": "npm run build-prod && node --max-old-space-size=4096 dist/api/bin/www",
    "dev": "nodemon ./src/api/bin/www --exec babel-node --presets @babel/preset-env",
    "remove": "rm -rf dist lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoluLab/one-coin-backend.git"
  },
  "engines": {
    "node": "14.17.5"
  },
  "author": "Abhishek Trivedi, Aniket Kesharwani, Ketan Agrawal",
  "license": "ISC",
  "homepage": "https://github.com/SoluLab/one-coin-backend#readme",
  "dependencies": {
